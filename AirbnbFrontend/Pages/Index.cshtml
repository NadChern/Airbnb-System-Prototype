@page
@model Airbnb_frontpages.Pages.IndexModel
@using Airbnb_frontpages.Models
@{
    ViewData["Title"] = "Find Your Stay | Airbnb Clone";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <!-- Optional: Custom CSS to refine spacing, etc. -->
    <style>
        .hero-section {
            background: url('https://images.unsplash.com/photo-1503264116251-35a269479413?auto=format&fit=crop&w=1600&q=80') no-repeat center center/cover;
            height: 60vh;
            position: relative;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .hero-overlay {
            background-color: rgba(0, 0, 0, 0.4);
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
        }
        .hero-content {
            position: relative;
            z-index: 1;
            text-align: center;
        }
        .hero-content h1 {
            font-size: 3rem;
            font-weight: 700;
        }
        .hero-content p {
            font-size: 1.25rem;
        }
        .search-section {
            margin-top: -2rem;
            background: #fff;
            padding: 1.5rem;
            border-radius: 0.5rem;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            position: relative;
            z-index: 2;
        }
        .property-card {
            border: none;
            border-radius: 0.5rem;
            overflow: hidden;
            transition: transform 0.2s ease;
        }
        .property-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        }
        .property-img {
            object-fit: cover;
            height: 200px;
        }
        .badge-booked {
            background-color: #dc3545 !important; /* red */
        }
        .badge-available {
            background-color: #28a745 !important; /* green */
        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-overlay"></div>
        <div class="hero-content container">
            <h1 class="fw-bold">Find Your Next Stay</h1>
            <p class="lead">Discover amazing places to stay for your next trip.</p>
        </div>
    </section>

    <!-- Search Form Section -->
    <div class="container">
        <section class="search-section mt-5">
            <h4 class="text-center mb-4 text-dark">Find Your Perfect Place</h4>
            <form method="get" class="search-form">
                <div class="row g-3">
                    <div class="col-md-4">
                        <input type="text" name="searchTerm" class="form-control" placeholder="Search by name" value="@Model.SearchTerm">
                    </div>
                    <div class="col-md-3">
                        <input type="number" name="minPrice" class="form-control" placeholder="Min Price" value="@(Model.MinPrice.HasValue ? Model.MinPrice.ToString() : "")">
                    </div>
                    <div class="col-md-3">
                        <input type="number" name="maxPrice" class="form-control" placeholder="Max Price" value="@(Model.MaxPrice.HasValue ? Model.MaxPrice.ToString() : "")">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-danger w-100">Search</button>
                    </div>
                </div>
            </form>
        </section>
    </div>

    <!-- Listings Section -->
    <div class="container mt-5">
        <div class="row">
            @if (Model.Listings != null && Model.Listings.Any())
            {
                foreach (var listing in Model.Listings)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card property-card h-100">
                            <img src="@(listing.Photos != null && listing.Photos.Any()
                                ? listing.Photos.First().PhotoUrl
                                : Url.Content("~/images/placeholder.png"))"
                                class="card-img-top property-img" alt="Property Image">
                            
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-danger">@listing.Title</h5>
                                <p class="card-text text-muted">@listing.About</p>
                                <p><strong>Price:</strong> 
                                    <span class="text-success fw-bold">
                                        $@listing.PricePerNight / night
                                    </span>
                                </p>

                                <!-- Booking Status Section -->
                                @if (listing.IsBooked)
                                {
                                    <span class="badge badge-booked mb-2">Booked</span>
                                    @if (listing.ActiveBookingId.HasValue)
                                    {
                                        <form method="post" asp-page-handler="Cancel" asp-route-bookingId="@listing.ActiveBookingId" class="d-inline">
                                            <button type="submit" class="btn btn-danger btn-sm">Cancel Booking</button>
                                        </form>
                                    }
                                }
                                else
                                {
                                    <span class="badge badge-available mb-2">Available</span>
                                }

                                <div class="mt-auto">
                                    <a href="/PropertyDetail?id=@listing.Id" class="btn btn-outline-danger w-100">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center text-muted fs-5">No listings available at the moment.</p>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
