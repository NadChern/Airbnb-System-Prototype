@page
@model Airbnb_frontpages.Pages.PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        .privacy-container {
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <div class="container privacy-container">
        <h1 class="mb-4">Privacy Policy</h1>
        <p>
            We value your privacy and are committed to protecting your personal information. This application collects data solely to improve user experience and does not share your data with third parties without your consent.
        </p>
        <h3 class="mt-4">Data Collection</h3>
        <p>
            We collect information such as your search queries, booking details, and preferences to better tailor our services. Cookies are used for session management and personalization.
        </p>
        <h3 class="mt-4">Contact</h3>
        @* <p>
            If you have any concerns regarding your privacy, please contact us at 
            <a href="mailto:privacy@airbnbclone.com">privacy@airbnbclone.com</a>.
        </p> *@
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
